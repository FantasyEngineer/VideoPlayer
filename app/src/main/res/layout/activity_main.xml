<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.administrator.videoplayer.MainActivity">

    <Button
        android:id="@+id/btn_use_system_player"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="使用系统的播放器" />

    <Button
        android:id="@+id/btn_use_video_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="使用VideoView播放" />

    <Button
        android:id="@+id/btn_use_MediaPlayer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="使用MediaPlayer+SurfaceView" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop"/>

</LinearLayout>
